<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditItemActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageViewEditItem"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/textViewEditItemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@id/imageViewEditItem"
        android:textColor="@android:color/black"
        android:textSize="30sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Item Description"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/imageViewEditItem"
        android:textColor="@android:color/black"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/textViewEditImageDescription"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:background="@drawable/edit_black_border"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/imageViewEditItem"
        android:layout_centerHorizontal="true"
        android:visibility="visible"/>

    <EditText
        android:id="@+id/editTextEditItemDescription"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:background="@drawable/edit_black_border"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/imageViewEditItem"
        android:layout_centerHorizontal="true"
        android:gravity="top"
        android:visibility="invisible"
        />

    <TextView
        android:id="@+id/textViewEditRequestInfo"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:scrollbars="vertical"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textViewEditImageDescription"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/buttonDeleteItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="210dp"
        android:layout_below="@+id/textViewEditImageDescription"
        android:layout_marginTop="100dp"
        android:text="Delete item"
        />
    <Button
        android:id="@+id/buttonUpdateItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_below="@+id/textViewEditImageDescription"
        android:layout_marginTop="100dp"
        android:text="Update item"
        />

</RelativeLayout>