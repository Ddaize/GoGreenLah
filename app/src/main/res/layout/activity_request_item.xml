<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ImageDetails"
    android:padding="15dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageViewItem"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/textViewItemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@id/imageViewItem"
        android:textColor="@android:color/black"
        android:textSize="30sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Item Description"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/imageViewItem"
        android:textColor="@android:color/black"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/textViewImageDescription"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:background="@drawable/edit_black_border"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/imageViewItem"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textViewRequestInfo"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:scrollbars="vertical"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textViewImageDescription"
        android:layout_marginTop="20dp"
        android:gravity="top" />

    <EditText
        android:id="@+id/editTextRequestInfo"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/textViewImageDescription"
        android:hint="Enter your tele handle"
        android:layout_marginTop="100dp"/>

    <Button
        android:id="@+id/buttonRequestItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"
        android:layout_below="@+id/textViewImageDescription"
        android:layout_marginTop="100dp"
        android:text="I want this item"
        />



</RelativeLayout>